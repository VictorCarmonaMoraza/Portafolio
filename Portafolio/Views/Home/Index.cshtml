@model Persona

@{
    ViewData["Title"] = "Pagina Principal";
    string ConvertirEnMayusculas(string valor)
    {
        return valor.ToUpper() + "ZZZ";
    }

    DateTime hoy = DateTime.Now;
    var nombres = new List<string>() { "Felipe", "Claudia", "Roberto" };
}

<div class="text-center">
    <ul>
        @foreach(var nombre in nombres)
        {
        <li>@nombre</li>
        }
    </ul>
    <h1 class="display-4">Soy Victor Carmona @Model.Nombre.ToUpper() (@Model.Edad)</h1>
    <h1>@ConvertirEnMayusculas(Model.Nombre)</h1>
    <h4>@hoy.ToString("dd/MM/yyyy hh:mm:ss tt")</h4>

    @if(Model.Edad >= 18)
    {
    <h4>Eres mator de edad! Puedes pasar <button>Entrar</button></h4>
    }
    else
    {
    <h4>Eres menor ! No puedes udemy</h4>
    }

    <h2>Soy un desarrollador full stack especializado en tecnologías .NET y JavaScript.</h2>

    <img id="foto" src="~/imagenes/foto.jpg" alt="Foto de Victor"/>
</div>
